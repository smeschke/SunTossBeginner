<resources>
    <!--  overall application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- three custom colors are used -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar.Solid.Main.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/logo</item>
    </style>


    <style name="AppTheme.Main" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Main.NoTitle</item>
    </style>

</resources>
